<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/css/styles.css" media="all">
        <meta charset="utf-8">
        <title>Music Collection</title>
    </head>
    <body>
        <div id="header">
            <h1>My Music Collection</h1>
        </div>
        <div id="wrapper">
            <div id="addMusic">
                <h3>Lets Add Some Music</h3>
                <form class="btn" action="/enter_music" method="get">
                    <button type="submit" >Add Music</button>
                </form>
            </div>
            <form class="btn" action="/delete_cds" method="post">
                <button type="submit" >Clear Library</button>
            </form>
        </div>
        {% if cds is not empty %}
            <div id="search">
                <h2>Search:</h2>
                <form action="/results" method="get">
                    <div class="form-group">
                        <label for="user_artist">Search by Artist Name:</label>
                        <input id="user_artist" name="user_artist" class="form-control" type="text">
                    </div>
                    <button type="submit" class="btn-success">Search</button>
                </form>
            </div>
            <div id="collection">
                <h3>My Collection</h3>
                <ul>
                    {%for cd in cds %}
                    <div class="cds">
                        <h2>{{ cd.artist }}</h2>
                        <p>- {{ cd.album_name }} -</p>
                        <p>- {{ cd.year }} -</p>
                        <img src="{{ cd.cover_art }}" alt="{{ cd.album_name }}" />
                        <br>
                    </div>
                    {% endfor %}
                </ul>
            </div>
        {% else %}
            <div id="noResults">
                <h1>Welcome Message</h1>
            </div>
        {% endif %}
    </body>
</html>
